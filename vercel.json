{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/cdn/(.*)",
      "dest": "/cdn/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/src/web/$1"
    },
    {
      "src": "/favicon.png", 
      "dest": "/src/web/favicon.png"
    },
    {
      "src": "/files/(.*)",
      "dest": "/api/files/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
